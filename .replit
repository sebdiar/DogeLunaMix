# Replit configuration for DogeUB

language = "nodejs"

# Start command - runs both backend and frontend
run = "npm run start:replit"
modules = ["nodejs-20", "web", "bash"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

# Replit asignará automáticamente el puerto principal via process.env.PORT
# Solo necesitamos configurar el puerto que Replit usará
# El backend corre internamente en 3001 y se accede via proxy desde el frontend

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DogeUB App"

[[workflows.workflow]]
name = "DogeUB App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 node replit-start.js"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["node", "replit-start.js"]
build = ["npm", "run", "build"]

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

# Nix packages (if needed)
# nix = "pkgs.nodejs_20 pkgs.npm"

# Environment variables are set in Replit Secrets tab

